#!/bin/bash

# Function to retrieve DNS information for a subdomain
get_dns_info() {
    domain=$1
    subdomain=$2

    if [ -z "$subdomain" ]; then
        # If no subdomain provided, default to www, lb-01, web-01, and web-02
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for sub in "${subdomains[@]}"; do
        record_type=$(dig +short -t A "$sub.$domain" | awk '{print $1}')
        destination=$(dig +short "$sub.$domain" | awk 'NR==1{print $1}')
        echo "The subdomain $sub is a $record_type record and points to $destination"
    done
}

# Check if domain and subdomain arguments are provided
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [<subdomain>]"
    exit 1
fi

# Parse command line arguments
domain=$1
subdomain=$2

# Call function to retrieve DNS information
get_dns_info "$domain" "$subdomain"

